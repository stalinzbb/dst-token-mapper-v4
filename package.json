{
  "name": "dst-token-mapper-v4",
  "version": "1.0.0",
  "description": "Figma Plugin to map detached styles to design tokens",
  "main": "code.js",
  "scripts": {
    "build": "webpack && node copy-files.js",
    "build-ts": "tsc -p tsconfig.json --skipLibCheck",
    "build-ignore-errors": "tsc -p tsconfig.json --skipLibCheck --noEmitOnError",
    "lint": "eslint --ext .ts,.tsx --ignore-pattern node_modules .",
    "lint:fix": "eslint --ext .ts,.tsx --ignore-pattern node_modules --fix .",
    "watch": "webpack --watch"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@figma/eslint-plugin-figma-plugins": "*",
    "@figma/plugin-typings": "*",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2",
    "ts-loader": "^9.5.1",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@figma/figma-plugins/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "root": true,
    "rules": {
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_",
          "caughtErrorsIgnorePattern": "^_"
        }
      ]
    }
  },
  "dependencies": {
    "@types/lodash": "^4.14.195",
    "@types/tinycolor2": "^1.4.6",
    "@types/uuid": "^9.0.2",
    "lodash": "^4.17.21",
    "tinycolor2": "^1.6.0",
    "uuid": "^9.0.0"
  }
}
